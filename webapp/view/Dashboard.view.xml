<mvc:View controllerName="com.kaar.quality.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout">
    <Page id="dashboardPage" title="Quality Management Dashboard">
        <headerContent>
            <Button icon="sap-icon://log" press="onLogout" tooltip="Logout" />
        </headerContent>
        <content>
            <VBox class="sapUiMediumMargin">
                <Title text="Welcome, Quality Engineer" class="sapUiMediumMarginBottom" />
                <HBox wrap="Wrap" justifyContent="Center">
                    <GenericTile class="sapUiTinyMargin" header="Inspection Lot" subheader="All Lots" press="onPressAllLots">
                        <TileContent unit="Lots" footer="Total Count">
                            <NumericContent value="{inspection>/ZBL_QUA_INSPECTION_VIEW/$count}" icon="sap-icon://checklist-item" />
                        </TileContent>
                    </GenericTile>
                    <GenericTile class="sapUiTinyMargin" header="Result Records" subheader="Pending Entry" press="onPressResults">
                        <TileContent unit="Lots" footer="Action Needed">
                            <NumericContent value="{inspection>/ZBL_QUA_INSPECTION_VIEW/$count}" valueColor="Critical" icon="sap-icon://manager-insight" />
                        </TileContent>
                    </GenericTile>
                    <GenericTile class="sapUiTinyMargin" header="Usage Decision" subheader="Pending Decisions" press="onPressUsage">
                        <TileContent unit="Lots" footer="Decision Needed">
                            <NumericContent value="{inspection>/ZBL_QUA_INSPECTION_VIEW/$count}" valueColor="Error" icon="sap-icon://decision" />
                        </TileContent>
                    </GenericTile>
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
